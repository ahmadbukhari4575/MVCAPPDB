@model IEnumerable<MyApp.Models.EmployeeModel>

@{
    ViewBag.Title = "GetAllEmployee";
}

    <div class="container" style="padding:20pt;">
        <div class="row">
            <h4>All Employees</h4>


            <a href="@Url.Action("Create","Home")" class="btn btn-success" style="margin-bottom:20pt;margin-top:20pt">Create Employee</a>
            
            <div class="container" style="float:left;margin-bottom:50pt">
                <div class="row">
                    @using (Html.BeginForm("SearchUser", "Home", FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            @Html.Label("Search", new { @class = "col-md-2 control-label" })

                            <div class="col-md-4">
                                @Html.TextBox("name", null, new { @class = "form-control", @placeholder = "Search Employee Name", @required = "required" })
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
           
           

            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.District)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.PostalCode)
                    </th>
                    <th>Designation Name</th>
                    <th>Joining Date</th>
                    <th>Total Experience</th>
                    <th>Add</th>
                    <th>Details</th>
                    <th>Update</th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.JoiningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.TotalYears)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditEmployee", new { id = item.ID }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Details", "GetEmployee", new { id = item.ID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                   
                   
                    @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
                }

            </table>
        </div>
    </div>

